<Window x:Class="WpfAppRoutedEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppRoutedEvent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Direct Event! -Directly execute when click" Click="Button_Click" Width="300" Height="100"></Button>
            <Button Content="Bubbling event execute when the mouse is release from right" Width="300" Height="100"  MouseUp="Button_MouseUp"></Button>

        </StackPanel>
        

    </Grid>
</Window>
